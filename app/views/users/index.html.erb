<%= render "templet" %>

    <div class = "col-xs-9" "user-index" >
        <h2>Users</h2>
        <table class = "table">
         <thead>
            <tr>
                <th>image</th>
                <th>name</th>
            </tr>
         </thead>
         <tbody>
            <% @users.each do |user| %>
                <tr><td><%= attachment_image_tag user, :profile_image, size: "40x40", fallback: "no_image.jpg"%></td>
                <td><%= user.name %></td>
                <td>フォロー数　<%= user.follows.count %></td>
                <td>フォロワー数 <%= user.followers.count %></td>
                
                <td>
                <% unless user == current_user %>
                    <% if user.followed_by?(current_user) %>
                    <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "link"  %>
                        
                    <% else %>
                    <%= link_to "フォローをする", user_relationships_path(user.id), method: :post, class: "link"  %>
                        
                    <% end %>  
                <% end %>      
                </td>
                <td><%= link_to "Show", user_path(user.id), class: "link" %></td>
                 
                </tr>
            <% end %>
         </tbody>   
        </table>
    </div>

</div> 
</div>