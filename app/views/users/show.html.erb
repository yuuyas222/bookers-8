

<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>    

<%= render "templet" %>


<div class ="col-xs-9">
<h2>Books</h2>
    <table class = "table">
        <thead>
        <tr> 
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
         </thead>
         <tbody>
         <% @books.each do |book| %>
            <tr>
                <td>
                <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, size: "40x40", fallback: "no_image.jpg"%>
                <% end %>
                </td>
                <td><%= link_to book.title, book_path(book.id), class: "link" %></td>
                <td><%= book.body %></td>
            </tr>
            <% end %>
         </tbody>   
    </table>


 </div> 
</div>

<div id="map"></div>