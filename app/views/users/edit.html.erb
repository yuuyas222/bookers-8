  <% end %>

<div class = "container">


<h2>User info</h2>

<%= form_for(@user) do |f| %>
    <h4>name</h4>
    <%= f.text_field :name, autofocus: true, placeholder:"名前"%>
    <div class = "user-image">
    <h4>image</h4>
    <%= f.attachment_field :profile_image %>
    </div>
    <h4>introduction</h4>
    <%= f.text_area :introduction %>
    <%= f.submit "Update User" %>
<% end %>


</div>